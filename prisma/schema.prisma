generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  ADMIN
  USER
}

enum ChannelKey {
  general
  support
}

model Message {
  id         String     @id @default(cuid())
  channelKey ChannelKey
  authorId   String
  authorRole Role
  content    String
  createdAt  DateTime   @default(now())

  @@index([channelKey, createdAt])
}
